<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_20dp"

        android:layout_margin="@dimen/spacing_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/screenBackground"
            android:paddingBottom="@dimen/spacing_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_5dp"
                android:layout_marginLeft="@dimen/spacing_5dp">

                <TextView
                    android:id="@+id/dates_of_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="23/05/2020"
                    android:textColor="@color/red"
                    android:textSize="@dimen/spacing_20dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/exercises_names"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_10dp"
                        android:layout_weight="1"
                        android:paddingStart="?android:expandableListPreferredChildIndicatorRight"
                        android:paddingTop="@dimen/spacing_10dp"
                        android:paddingBottom="@dimen/spacing_10dp"
                        android:text="Pull Down"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Name"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/UserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Ozan"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="email"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/Useremail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Ozan@gmail.com"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Sets"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/setstv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="12"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Repitition"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/repitition_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="18"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="Weight"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:id="@+id/weightsTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_10dp"
                            android:text="15"
                            android:textColor="@color/orange"
                            android:textSize="@dimen/spacing_15dp"
                            android:textStyle="bold">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivGroupIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_down"
                        android:backgroundTint="@color/orange" />
                </LinearLayout>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/delete_student_Imgview"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    app:backgroundTint="@color/black"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_delete"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/detail_LL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/exercisDetailCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_10dp"
                    app:cardCornerRadius="@dimen/spacing_10dp"
                    app:cardElevation="4dp">

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_5dp"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/exericeImage"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter" />

                            <TextView
                                android:id="@+id/exerice_description"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"

                                android:text="Stand with your body upright and core muscles braced, looking straight ahead. Hold the bar on your upper chest, gripping it with hands just wider than shoulder-width apart. Press the bar directly overhead. Don't tilt your hips forward during the move."
                                android:textSize="@dimen/spacing_15dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>