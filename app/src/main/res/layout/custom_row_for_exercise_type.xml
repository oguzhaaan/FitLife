<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/spacing_10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="@dimen/spacing_10dp"
    android:id="@+id/exercisDetailCardView"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_5dp"
            android:orientation="vertical"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/exericeImage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/exerice_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:text="Cross Over"
                android:textStyle="bold"
                android:textSize="20dp"

                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/exerice_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="@dimen/spacing_15dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"

                android:text="Stand with your body upright and core muscles braced, looking straight ahead. Hold the bar on your upper chest, gripping it with hands just wider than shoulder-width apart. Press the bar directly overhead. Don't tilt your hips forward during the move."
                android:layout_centerVertical="true"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
